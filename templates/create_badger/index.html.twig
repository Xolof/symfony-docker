{% extends 'base.html.twig' %}

{% block title %}Create Badger{% endblock %}

{% block body %}

<h1>Create Badger</h1>

{% for error in errors %}
    <p class="error">{{ error.message }}</p>
{% endfor %}

<section class="badger_form">
{{ form_start(form) }}

    {{ form_label(form.name) }}
    <div class="formError">
        {{ form_errors(form.name) }}
    </div>
    {{ form_widget(form.name) }}

    {{ form_label(form.continent) }}
    <div class="formError">
        {{ form_errors(form.continent) }}
    </div>
    {{ form_widget(form.continent) }}

    {{ form_label(form.description) }}
    <div class="formError">
        {{ form_errors(form.description) }}
    </div>
    {{ form_widget(form.description) }}

    {{ form_label(form.image) }}
    <div class="formError">
        {{ form_errors(form.image) }}
    </div>
    {{ form_widget(form.image) }}
{{ form_end(form) }}
</section>

{% endblock %}
