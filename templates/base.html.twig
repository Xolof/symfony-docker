<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">

        {# We do not import stylesheets here as we use Symfony Asset Mapper. #}
        {# {% block stylesheets %} #}
            {# <link rel="stylesheet" href="{{ asset('css/picnic.min.css') }}"> #}
            {# <link rel="stylesheet" href="{{ asset('css/styles.css') }}"> #}
        {# {% endblock %} #}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <nav>
            <a href="/" class="brand">
                <img class="logo" src="{{ asset('logo.png') }}" />
            </a>

            <!-- responsive-->
            <input id="bmenub" type="checkbox" class="show">
            <label for="bmenub" class="burger pseudo button">&#8801;</label>

            <div class="menu">
                <a href="{{ path('app_home') }}">Badger list</a>
                {% if is_granted('ROLE_USER') %}
                    <a href="{{ path('app_create_badger') }}">Add badger</a>
                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                        <a href="{{ path('admin_home') }}">Administrate users</a>
                    {% endif %}

                    <form action="{{ path('app_logout') }}" method="post" class="logoutForm">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('logout') }}">
                        <button class="logoutButton" type="submit">Logout</button>
                    </form>

                {% endif %}
                {% if not is_granted('ROLE_USER') %}
                    <a href="{{ path('app_login') }}">Login</a>
                    <a href="{{ path('register') }}">Register</a>
                {% endif %}
            </div>
        </nav>

        <main class="container">

            {% for message in app.flashes('success') %}
                <p class="flash success">
                    {{ message }}
                </p>
            {% endfor %}

            {% for message in app.flashes('info') %}
                <p class="flash info">
                    {{ message }}
                </p>
            {% endfor %}

            {% for message in app.flashes('error') %}
                <p class="flash error">
                    {{ message }}
                </p>
            {% endfor %}

            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <p>Made by <a href="https://github.com/xolof">Xolof</a> with <a href="https://symfony.com/">Symfony</a> and <a href="https://picnicss.com/">Picnic CSS</a></p>
        </footer>
    </body>
</html>
